{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "pull": true,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "../ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../../ansible/ubuntu-php7.1.yml",
      "role_paths": [
        "../../ansible/roles/ubuntu-apache",
        "../../ansible/roles/ubuntu-base",
        "../../ansible/roles/ubuntu-mysql",
        "../../ansible/roles/ubuntu-nodejs",
        "../../ansible/roles/ubuntu-php7.1",
        "../../ansible/roles/ubuntu-varnish3",
        "../../ansible/roles/ubuntu-probo"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "tag": "php7.1-intermediary",
        "repository": "proboci/ubuntu-14.04-lamp"
      }
    ]
  ]
}
