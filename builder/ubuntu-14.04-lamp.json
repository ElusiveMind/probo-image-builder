{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "pull": true,
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/14.04-php-5.6.yml",
      "role_paths": [
        "../ansible/roles/1404-server-php-56"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "tag": "intermediary",
        "repository": "proboci/ubuntu-14.04-lamp"
      }
    ]
  ]
}
